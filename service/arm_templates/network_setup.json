{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworksAPIVersion": {
      "type": "string",
      "defaultValue": "2017-03-01",
      "metadata": {
        "description": "API version used by the Microsoft.Network/virtualNetworks resource."
      }
    },
    "networkSecurityGroupsAPIVersion": {
      "type": "string",
      "defaultValue": "2017-03-01",
      "metadata": {
        "description": "API version used by the Microsoft.Network/networkSecurityGroups resource."
      }
    },
    "addressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "The main address block reserved for this virtual network."
      }
    },
    "subnetMasterCIDR": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "The CIDR block for the Kubernetes masters' subnet"
      }
    },
    "subnetWorkerCIDR": {
      "type": "string",
      "defaultValue": "10.0.2.0/24",
      "metadata": {
        "description": "The CIDR block for the Kubernetes workers' subnet"
      }
    }
  },
  "variables": {
    "securityGroupMasterName": "[concat(uniquestring(resourceGroup().id), '-securityGroupMaster')]",
    "securityGroupMasterID": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('securityGroupMasterName'))]",
    "securityGroupWorkerName": "[concat(uniquestring(resourceGroup().id), '-securityGroupWorker')]",
    "securityGroupWorkerID": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('securityGroupWorkerName'))]",

    "virtualNetworkName": "[concat(uniquestring(resourceGroup().id), '-virtualNetwork')]",
    "virtualNetworkID": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",

    "subnetMasterName": "[concat(variables('virtualNetworkName'), '-masterSubnet')]",
    "subnetMasterURI": "[concat(variables('virtualNetworkID'), '/subnets/', variables('subnetMasterName'))]",
    "subnetWorkerName": "[concat(variables('virtualNetworkName'), '-workerSubnet')]",
    "subnetWorkerURI": "[concat(variables('virtualNetworkID'), '/subnets/', variables('subnetWorkerName'))]",

  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "apiVersion": "[parameters('virtualNetworksAPIVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('securityGroupMasterName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('securityGroupWorkerName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetMasterName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetMasterCIDR')]",
              "networkSecurityGroup": {
                "id": "[variables('securityGroupMasterID')]"
              }
            }
          },
          {
            "name": "[variables('subnetWorkerName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetWorkerCIDR')]",
              "networkSecurityGroup": {
                "id": "[variables('securityGroupWorkerID')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('securityGroupMasterName')]",
      "apiVersion": "[parameters('networkSecurityGroupsAPIVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "defaultInboundRule",
            "properties": {
              "description": "Default rule that denies any inbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "access": "Deny",
              "direction": "Inbound",
              "priority": 1000
            }
          },
          {
            "name": "defaultOutboundRule",
            "properties": {
              "description": "Default rule that allows any outbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Outbound",
              "priority": 1001
            }
          },
          {
            "name": "workerToMasterRule",
            "properties": {
              "description": "Allow the worker subnet to talk with the master subnet.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "destinationAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "access": "Allow",
              "direction": "Inbound",
              "priority": 100
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('securityGroupWorkerName')]",
      "apiVersion": "[parameters('networkSecurityGroupsAPIVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "defaultInboundRule",
            "properties": {
              "description": "Default rule that denies any inbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "access": "Deny",
              "direction": "Inbound",
              "priority": 1000
            }
          },
          {
            "name": "defaultOutboundRule",
            "properties": {
              "description": "Default rule that allows any outbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Outbound",
              "priority": 1001
            }
          },
          {
            "name": "masterToWorkerRule",
            "properties": {
              "description": "Allow the master subnet to talk with the worker subnet.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "destinationAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "access": "Allow",
              "direction": "Inbound",
              "priority": 100
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "subnetMasterURI": {
      "type": "string",
      "value": "[variables('subnetMasterURI')]"
    },
    "subnetWorkerURI": {
      "type": "string",
      "value": "[variables('subnetWorkerURI')]"
    }
  }
}
