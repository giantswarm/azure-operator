{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworksAPIVersion": {
      "type": "string",
      "defaultValue": "2017-03-01",
      "metadata": {
        "description": "API version used by the Microsoft.Network/virtualNetworks resource."
      }
    },
    "networkSecurityGroupsAPIVersion": {
      "type": "string",
      "defaultValue": "2017-03-01",
      "metadata": {
        "description": "API version used by the Microsoft.Network/networkSecurityGroups resource."
      }
    },
    "addressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "The main address block reserved for this virtual network."
      }
    },
    "subnetMasterCIDR": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "The CIDR block for the Kubernetes masters' subnet"
      }
    },
    "subnetWorkerCIDR": {
      "type": "string",
      "defaultValue": "10.0.2.0/24",
      "metadata": {
        "description": "The CIDR block for the Kubernetes workers' subnet"
      }
    }
  },
  "variables": {
    "virtualNetworkName": "[concat(uniquestring(resourceGroup().id), '-VirtualNetwork')]",
    "virtualNetworkID": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",

    "mastersSecurityGroupName": "[concat(uniquestring(resourceGroup().id), '-MastersSecurityGroup')]",
    "mastersSecurityGroupID": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('mastersSecurityGroupName'))]",
    "mastersSubnetName": "[concat(variables('virtualNetworkName'), '-MastersSubnet')]",
    "mastersSubnetURI": "[concat(variables('virtualNetworkID'), '/subnets/', variables('mastersSubnetName'))]",

    "workersSecurityGroupName": "[concat(uniquestring(resourceGroup().id), '-WorkersSecurityGroup')]",
    "workersSecurityGroupID": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('workersSecurityGroupName'))]",
    "workersSubnetName": "[concat(variables('virtualNetworkName'), '-WorkersSubnet')]",
    "workersSubnetURI": "[concat(variables('virtualNetworkID'), '/subnets/', variables('workersSubnetName'))]"

  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "apiVersion": "[parameters('virtualNetworksAPIVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('mastersSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('workersSecurityGroupName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('mastersSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetMasterCIDR')]",
              "networkSecurityGroup": {
                "id": "[variables('mastersSecurityGroupID')]"
              }
            }
          },
          {
            "name": "[variables('workersSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetWorkerCIDR')]",
              "networkSecurityGroup": {
                "id": "[variables('workersSecurityGroupID')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('mastersSecurityGroupName')]",
      "apiVersion": "[parameters('networkSecurityGroupsAPIVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "defaultInboundRule",
            "properties": {
              "description": "Default rule that denies any inbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "access": "Deny",
              "direction": "Inbound",
              "priority": 1000
            }
          },
          {
            "name": "defaultOutboundRule",
            "properties": {
              "description": "Default rule that allows any outbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Outbound",
              "priority": 1001
            }
          },
          {
            "name": "workerToMasterRule",
            "properties": {
              "description": "Allow the worker subnet to talk with the master subnet.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "destinationAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "access": "Allow",
              "direction": "Inbound",
              "priority": 100
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('workersSecurityGroupName')]",
      "apiVersion": "[parameters('networkSecurityGroupsAPIVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "defaultInboundRule",
            "properties": {
              "description": "Default rule that denies any inbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "access": "Deny",
              "direction": "Inbound",
              "priority": 1000
            }
          },
          {
            "name": "defaultOutboundRule",
            "properties": {
              "description": "Default rule that allows any outbound traffic.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Outbound",
              "priority": 1001
            }
          },
          {
            "name": "masterToWorkerRule",
            "properties": {
              "description": "Allow the master subnet to talk with the worker subnet.",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[parameters('subnetMasterCIDR')]",
              "destinationAddressPrefix": "[parameters('subnetWorkerCIDR')]",
              "access": "Allow",
              "direction": "Inbound",
              "priority": 100
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "mastersSubnetURI": {
      "type": "string",
      "value": "[variables('mastersSubnetURI')]"
    },
    "workersSubnetURI": {
      "type": "string",
      "value": "[variables('workersSubnetURI')]"
    }
  }
}
