{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "networkInterfacesAPIVersion": {
      "type": "string",
      "defaultValue": "2016-09-01",
      "metadata": {
        "description": "API version used by the Microsoft.Network/networkInterfaces resource."
      }
    },
    "virtualMachinesAPIVersion": {
      "type": "string",
      "defaultValue": "2016-08-30",
      "metadata": {
        "description": "API version used by the Microsoft.Compute/virtualMachines resource."
      }
    },
    "clusterID": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "masterCount": {
      "type": "int"
    },
    "masterIPAddresses": {
      "type": "array"
    },
    "masterSubnetID": {
      "type": "string"
    },
    "masterAvailabitySetID": {
      "type": "string"
    },
    "masterVMSize": {
      "type": "string"
    },
    "masterDataDiskSizeGB": {
      "type": "int"
    },
    "masterAdminUsername": {
      "type": "string"
    },
    "masterAdminPassword": {
      "type": "string"
    },
    "masterDisablePasswordAuth": {
      "type": "bool",
      "defaultValue": true
    },
    "masterAdminSSHKeyPath": {
      "type": "string"
    },
    "masterAdminSSHKeyData": {
      "type": "string"
    },
    "masterOSImagePublisher": {
      "type": "string"
    },
    "masterOSImageOffer": {
      "type": "string"
    },
    "masterOSImageSKU": {
      "type": "string"
    },
    "masterOSImageVersion": {
      "type": "string"
    },
    "masterCloudConfigData": {
      "type": "string"
    }
  },
  "variables": {
    "masterNICName": "[concat(parameters('clusterID'), '-MasterNIC-')]",
    "masterVMName": "[concat(parameters('clusterID'), '-Master-')]",
    "masterOSDiskName": "[concat(parameters('clusterID'), '-OSDisk-')]",
    "masterDataDiskName": "[concat(parameters('clusterID'), '-DataDisk-')]"
  },
  "resources": [
    {
      "apiVersion": "[parameters('networkInterfacesAPIVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('masterNICName'), copyIndex())]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "masterNICCopy",
        "count": "[parameters('masterCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "MastersIpConfig",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('masterIPAddresses')[copyIndex()]]",
              "subnet": {
                "id": "[parameters('masterSubnetID')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "[parameters('virtualMachinesAPIVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('masterVMName'), copyindex())]",
      "copy": {
        "name": "masterVMCopy",
        "count": "[parameters('masterCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('masterNICName'), copyIndex())]"
      ],
      "location": "[resourceGroup().location]",
      "properties": {
        "availabilitySet": {
          "id": "[parameters('masterAvailabitySetID')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('masterVMSize')]"
        },
        "osProfile": {
          "computerName": "[concat(variables('masterVMName'), copyindex())]",
          "adminUsername": "[parameters('masterAdminUsername')]",
          "adminPassword": "[parameters('masterAdminPassword')]",
          "customData": "[parameters('masterCloudConfigData')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": "[parameters('masterDisablePasswordAuth')]",
            "ssh": {
              "publicKeys": [
                {
                  "path": "[parameters('masterAdminSSHKeyPath')]",
                  "keyData": "[parameters('masterAdminSSHKeyData')]"
                }
              ]
            }
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('masterOSImagePublisher')]",
            "offer": "[parameters('masterOSImageOffer')]",
            "sku": "[parameters('masterOSImageSKU')]",
            "version": "[parameters('masterOSImageVersion')]"
          },
          "osDisk": {
            "name": "[concat(variables('masterOSDiskName'), copyindex())]",
            "vhd": {
              "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/vhds/', variables('masterOSDiskName'), copyindex(),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(variables('masterDataDiskName'), copyindex())]",
              "diskSizeGB": "[parameters('masterDataDiskSizeGB')]",
              "lun": 0,
              "vhd": {
                "uri": "[concat('http://', parameters('storageAccountName'),'.blob.core.windows.net/vhds/', variables('masterDataDiskName'), copyIndex(), '.vhd')]"
              },
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('masterNICName'), copyIndex()))]"
            }
          ]
        }
      }
    }
  ]
}
