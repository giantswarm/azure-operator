{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "availabilitySetsAPIVersion": {
      "type": "string",
      "defaultValue": "2016-08-30",
      "metadata": {
        "description": "API version used by the Microsoft.Compute/availabilitySets resource."
      }
    },
    "clusterID": {
      "type": "string"
    },
    "masterFaultDomainCount": {
      "type": "string",
      "defaultValue": "3"
    },
    "masterUpdateDomainCount": {
      "type": "string",
      "defaultValue": "5"
    },
    "workerFaultDomainCount": {
      "type": "string",
      "defaultValue": "3"
    },
    "workerUpdateDomainCount": {
      "type": "string",
      "defaultValue": "5"
    }
  },
  "variables": {
    "masterAvailabilitySetName": "[concat(parameters('clusterID'), '-MasterAvailabilitySet')]",
    "masterAvailabilitySetID": "[resourceId('Microsoft.Network/availabilitySets', variables('masterAvailabilitySetName'))]",

    "workerAvailabilitySetName": "[concat(parameters('clusterID'), '-WorkerAvailabilitySet')]",
    "workerAvailabilitySetID": "[resourceId('Microsoft.Network/availabilitySets', variables('workerAvailabilitySetName'))]",
  },
  "resources": [
    {
      "apiVersion": "[parameters('availabilitySetsAPIVersion')]",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[variables('masterAvailabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "PlatformFaultDomainCount": "[parameters('masterFaultDomainCount')]",
        "PlatformUpdateDomainCount": "[parameters('masterUpdateDomainCount')]"
      }
    },
    {
      "apiVersion": "[parameters('availabilitySetsAPIVersion')]",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[variables('workerAvailabilitySetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "PlatformFaultDomainCount": "[parameters('workerFaultDomainCount')]",
        "PlatformUpdateDomainCount": "[parameters('workerUpdateDomainCount')]"
      }
    }
  ],
  "outputs": {
    "masterAvailabilitySetID": {
      "type": "string",
      "value": "[variables('masterAvailabilitySetID')]"
    },
    "workerAvailabilitySetID": {
      "type": "string",
      "value": "[variables('workerAvailabilitySetID')]"
    }
  }
}
