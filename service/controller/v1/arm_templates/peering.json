{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "sourceNetwork": {
      "type": "string"
    },
    "targetNetwork": {
      "type": "string"
    },
    "resourceGroup": {
      "type": "string"
    },
    "virtualNetworksPeeringAPIVersion": {
      "type": "string",
      "defaultValue": "2017-10-01",
      "metadata": {
        "description": "API version used by the Microsoft.Network/virtualNetworks resource."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "name": "[concat(parameters('sourceNetwork'), '/', parameters('name'))]",
      "apiVersion": "[parameters('virtualNetworksPeeringAPIVersion')]",
      "properties": {
        "remoteVirtualNetwork": {
          "id": "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('targetNetwork'))]"
        },
        "allowVirtualNetworkAccess": true,
        "allowForwardedTraffic": true,
        "allowGatewayTransit": false,
        "useRemoteGateways": false
      }
    }
  ]
}