{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accessTier": {
            "defaultValue": "Cool",
            "type": "string"
        },
        "accountType": {
            "defaultValue": "Standard_RAGRS",
            "type": "string"
        },
        "blobContainer": {
            "defaultValue": "ignition",
            "type": "string"
        },
        "kind": {
            "defaultValue": "BlobStorage",
            "type": "string"
        },
        "masterSubnetID": {
            "type": "string"
        },
        "workerSubnetID" : {
            "type": "string"
        },
        "supportsHttpsTrafficOnly": {
            "defaultValue": true,
            "type": "bool"
        },
        "clusterID":{
          "type":"string"
        },
        "GiantSwarmTags":{
          "type":"object",
          "defaultValue":{
            "provider":"F80D01C0-7AAC-4440-98F6-5061511962AD"
          }
        }
    },
    "variables": {
        "storageAccountName":"[concat(parameters('clusterID'),'gsignitionaccount')]"
    },
    "resources": [
        {
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "location":"[resourceGroup().location]",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[parameters('masterSubnetID')]",
                            "action": "Allow"
                        },
                        {
                            "id": "[parameters('workerSubnetID')]",
                            "action": "Allow"
                        }
                    ],
                    "ipRules": [],
                    "defaultAction": "Deny"
                },
                "accessTier": "[parameters('accessTier')]",
                "accountType": "[parameters('accountType')]",
                "supportsHttpsTrafficOnly": "[parameters('supportsHttpsTrafficOnly')]"
            },
            "dependsOn": [
                "[parameters('masterSubnetID')]",
                "[parameters('workerSubnetID')]"
            ],
            "sku": {
                "name": "[parameters('accountType')]"
            },
            "kind": "[parameters('kind')]",
            "tags": {
                "provider":"[toUpper(parameters('GiantSwarmTags').provider)]"
            },
            "resources": [
                {
                "name": "[concat('default/',parameters('blobContainer'))]",
                "type": "blobServices/containers",
                "apiVersion": "2018-07-01",
                "dependsOn": [
                    "[variables('storageAccountName')]"
                ]
                }
            ]
        }
    ],
    "outputs": {}
}
